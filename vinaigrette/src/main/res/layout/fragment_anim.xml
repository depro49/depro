<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_header"
        android:background="@color/primary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/h_header"
            android:layout_height="@dimen/h_header"
            android:padding="@dimen/pad_12"
            android:src="@drawable/menu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/pad_72"
            android:text="@string/setting" />
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_56"
        android:layout_marginTop="@dimen/pad_24"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/alpha_0"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/blue"
            android:text="Alpha 0"/>
        <TextView
            android:id="@+id/alpha_1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/accent_50"
            android:gravity="center"
            android:layout_marginLeft="@dimen/pad_24"
            android:text="Alpha 1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_56"
        android:layout_marginTop="@dimen/pad_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/scale_0"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/blue"
            android:text="Scale 0"/>
        <TextView
            android:id="@+id/scale_1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/accent_50"
            android:gravity="center"
            android:layout_marginLeft="@dimen/pad_24"
            android:text="Scale 1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_56"
        android:layout_marginTop="@dimen/pad_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/transl_0"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/blue"
            android:text="Transl 0"/>
        <TextView
            android:id="@+id/transl_1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/accent_50"
            android:gravity="center"
            android:layout_marginLeft="@dimen/pad_24"
            android:text="Transl 1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_56"
        android:layout_marginTop="@dimen/pad_14"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/set_0"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/blue"
            android:text="SET 0"/>
        <TextView
            android:id="@+id/set_1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/accent_50"
            android:gravity="center"
            android:layout_marginLeft="@dimen/pad_24"
            android:text="SET 1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:background="@color/accent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="@dimen/pad_24"/>

</LinearLayout>