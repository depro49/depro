    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:layout_below="@+id/tool" />
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_1"
        android:background="@color/black_10"
        android:layout_above="@+id/nav"
        android:orientation="horizontal"/>
    <RadioGroup
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_tool"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/products"
            android:textColor="@drawable/selector_menu_text"
            android:textSize="@dimen/pad_11" />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:button="@null"

            android:gravity="center"
            android:drawableTop="@drawable/selector2"
            android:layout_weight="1"
            android:textSize="@dimen/pad_11"
            android:textColor="@drawable/selector_menu_text"
            android:text="@string/service" />

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:button="@null"

            android:gravity="center"
            android:drawableTop="@drawable/selector3"
            android:layout_weight="1"
            android:textSize="@dimen/pad_11"
            android:textColor="@drawable/selector_menu_text"
            android:text="@string/about" />
        <RadioButton
            android:id="@+id/radio4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:button="@null"

            android:gravity="center"
            android:drawableTop="@drawable/selector4"
            android:layout_weight="1"
            android:textSize="@dimen/pad_11"
            android:textColor="@drawable/selector_menu_text"
            android:text="@string/news" />
    </RadioGroup>

    <com.dpcsa.compon.custom_components.SheetBottom
        android:id="@+id/error_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:viewId="@layout/view_error_dialog"
